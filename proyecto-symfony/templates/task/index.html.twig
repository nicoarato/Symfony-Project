{% extends 'base.html.twig' %}

{% block title %}Todas las tareas{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h2>Todas las tareas âœ…</h2>

    <table>
        <tr>
            <th>Tarea</th>
            <th>Prioridad</th>
            <th>Horas Presupuestadas</th>
            <th>Acciones</th>
        </tr>
        
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.priority }}</td>
                <td>{{ task.hours }}</td>
                <td class="buttons">
                    <a href="{{ path('task_detail', {'id':task.id}) }}" class="btn-ok">Ver</a>
                    <a href="" class="btn-edit">Editar</a>
                    <a href="" class="btn-delete">Eliminar</a>
                </td>
            </tr>
        {% endfor%}
    </table>
    
</div>
{% endblock %}
